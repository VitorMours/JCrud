# Arquivo de exemplo das variáveis de ambiente
# Copie este arquivo para .env e ajuste os valores conforme necessário

# MySQL Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=jcrud_db
MYSQL_USER=jcrud_user
MYSQL_PASSWORD=jcrud_password

# Application Configuration
SPRING_PROFILES_ACTIVE=docker
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/jcrud_db?createDatabaseIfNotExist=true&useSSL=false&serverTimezone=UTC
SPRING_DATASOURCE_USERNAME=jcrud_user
SPRING_DATASOURCE_PASSWORD=jcrud_password

# JPA Configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_JPA_SHOW_SQL=false

# Flyway Configuration
FLYWAY_ENABLED=true
FLYWAY_BASELINE_ON_MIGRATE=true